pipeline {
  agent {
    docker { image 'node:16-alpine' }
  }
  stages {
    stage('Test') {
      steps {
        sh 'node --version'
        input message: 'Enter your name', parameters: [string(defaultValue: 'machine', description: 'This is user description', name: 'user')], submitterParameter: 'user_name'
        echo "Hello ${user_name} ! "
          }
  }
}
}
