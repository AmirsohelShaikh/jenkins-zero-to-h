pipeline {
    agent any
    stages {
        stage('Checkout') {
            steps {
                git branch: 'main',
                    
                    url: 'https://github.com/sheshdhar3/Veeramalla-Jenkins-Zero-To-Hero.git'
            }
        }

        stage('Debug Workspace') {
            steps {
                script {
                    sh '''
                    echo "Workspace contents:"
                    ls -l
                    '''
                }
            }
        }

        stage('Build Docker') {
            steps {
                script {
                    dir('https://github.com/sheshdhar3/Veeramalla-Jenkins-Zero-To-Hero/edit/main/python-jenkins-argocd-k8s') {
                     echo "Building Docker Image"
                     sh 'docker build -t sheshdhar3-cicd-e2e:${BUILD_NUMBER} .'
                    }
                    
                    
                }
            }
        }
    }
}


