pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
      }
      steps {
	dir(multi-stage-multi-agent)
        sh 'mvn --version'
	sh 'mvn clean package'
        sh 'java -cp target/my-maven-app-1.0-SNAPSHOT.jar com.example.helloworld.App'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        sh 'node --version'
      }
    }
  }
}
