pipeline {
    agent {
        docker { image 'maven:3.8.1-adoptopenjdk-11' }
    }
    stages {
        stage('Build and Test') {
            steps {
                sh 'mvn clean install'
            }
      }
    }
   stage('Front-end') {
    agent {
        docker { image 'node:16-alpine' }
    }
    steps {
        sh '''
        echo "Installing dependencies..."
        npm install

        echo "Building the frontend application..."
        npm run build
        '''
    }
}

      }
    }
  }
}
