pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'openjdk:11-jdk-slim' }
      }
      steps {
        // Create HelloWorld.java, compile, and run it
        sh '''
          echo 'public class HelloWorld {
              public static void main(String[] args) {
                  System.out.println("Hello, World from Jenkins!");
              }
          }' > HelloWorld.java

          javac HelloWorld.java
          java HelloWorld
        '''
      }
    }

    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        // Print Node.js version
        sh 'node --version'
      }
    }
  }
}

