pipeline {
  agent none
  stages {
    stage('Back-end') {
      agent {
        docker { image 'maven:4.0.0-adoptopenjdk-11' }
      }
      steps {
        sh 'mvn --version'
      }
    }
    stage('Front-end') {
      agent {
        docker { image 'node:16-alpine' }
      }
      steps {
        sh 'node --version'
      }
    }
  }
}
