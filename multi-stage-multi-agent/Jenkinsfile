pipeline {
    agent none
    stages {
        stage('Checkout Code') {
            agent any
            steps {
                // Checkout the code from the Git repository
                git 'https://github.com/your-repo/your-java-app.git'
            }
        }
        stage('Back-end Build & Test') {
            agent {
                docker { image 'maven:3.8.1-adoptopenjdk-11' }
            }
            steps {
                sh 'mvn clean compile'
                sh 'mvn test'
            }
        }
    }
}

